package com.cts.cart.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cts.cart.entity.Cart;
import com.cts.cart.repository.CartRepository;

@Service
public class CartService {

	@Autowired
	private CartRepository cartRepository;

	public Cart saveItem(Cart cart, String name) {
		Cart cartItem= cartRepository.save(new Cart(name, cart.getItem(), cart.getQty(),cart.getQty()*cart.getItem().getPrice()));
		//cartItem.setItemTotal();
		return cartItem;
	}

}
